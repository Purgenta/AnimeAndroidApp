        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/gray_900</item>
        <item name="colorOnBackground">@color/gray_100</item>
        <item name="android:background">@color/gray_900</item>
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:textColor">@color/white</item>
